{
    "compilerOptions": {
        "sourceMap": true,
        "outDir": "dist",
        "strict": true,
        "lib": [
            "esnext"
        ],
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "target": "esnext",
        "moduleResolution": "Node",
        "noEmit": true,
        "allowImportingTsExtensions": true,
        "types": [
            "node",
            "mocha"
        ]
    },
    "include": [
        "src/**/*.ts",
        "tests/**/*.test.ts",
    ],
    "exclude": [
        "node_modules"
    ]
}